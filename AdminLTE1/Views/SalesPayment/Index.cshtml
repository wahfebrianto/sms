@{
    ViewBag.Title = "List Of Sales Invoice";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="box box-default panel-body">
            <div class="modal inmodal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cancel</span></button>
                            <h4 class="modal-title">Payment</h4>
                            <small class="font-bold"></small>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Payment Date : </label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Payment Type : </label>
                                <select class="form-control">
                                    <option value="">Transfer</option>
                                    <option value="">Tunai</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label>Note : </label>
                                <textarea class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal inmodal fade" id="myModal1" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cancel</span></button>
                            <h4 class="modal-title">Payment</h4>
                            <small class="font-bold"></small>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Payment Date : </label>
                                <input type="date" class="form-control" readonly />
                            </div>
                            <div class="form-group">
                                <label>Payment Type : </label>
                                <select class="form-control" disabled>
                                    <option value="">Transfer</option>
                                    <option value="">Tunai</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label>Note : </label>
                                <textarea class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">

                            <button style="margin-right:2%" type="button" class="btn btn-default pull-right" data-dismiss="modal"><span>Close</span></button>
                            <button style="margin-right:2%" class="btn btn-default pull-right">Print</button>
                        </div>
                    </div>
                </div>
            </div>
            <table id="myTable1" class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Invoice No</th>
                        <th>Invoice Date</th>
                        <th>Ship To</th>
                        <th>Total</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>JS-17-03-023233</td>
                        <td>24 Feb 2017</td>
                        <td>CV Mitra</td>
                        <td>Rp 200.000</td>
                        <td>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. </td>
                        <td><button class="btn btn-dropbox" data-toggle="modal" data-target="#myModal">Bayar</button></td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>JS-67-03-023233</td>
                        <td>24 Feb 2017</td>
                        <td>CV Mitra</td>
                        <td>Rp 200.000</td>
                        <td>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. </td>
                        <td><span class="label label-success " style="padding:7% 17%">Paid</span> <button class="btn btn-dropbox" data-toggle="modal" data-target="#myModal1">Info</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        var s = $("#myTable1").DataTable();
        s.columns.adjust().draw();
    });
</script>
