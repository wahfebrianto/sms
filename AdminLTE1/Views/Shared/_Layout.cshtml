                    <div class="modal-footer">
                        <button type="button" id="changePassCancel" class="btn btn-white" data-dismiss="modal">Cancel</button>
                        <button type="submit" id="changepassbtn" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
